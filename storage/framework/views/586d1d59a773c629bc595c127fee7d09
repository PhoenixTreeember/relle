

<?php $__env->startSection('page'); ?>
<?php echo e(trans('interface.name', ['page'=>trans('labs.title')])); ?>

<?php $__env->stopSection(); ?>

<?php $__env->startSection('title'); ?>
<h2><?php echo e(trans('interface.search')); ?></h2>
<?php $__env->stopSection(); ?>

<?php
$name = 'name_' . App::getLocale();
$desc = 'description_' . App::getLocale();
?>

<?php $__env->startSection('content'); ?>
<div class="row">    
    <div class="col-md-6 col-sm-12">   
        <h4><?php echo e(trans('labs.title')); ?></h4>
        <?php foreach($result['labs'] as $lab): ?>
        <div class="panel panel-default" style="background: #ECF0F1">
            <div class="panel-body">
                <?php
                if (status($lab->id)) {
                    $color = "#1abc9c";
                    $btn = 'btn-primary';
                    $status = 'Disponível';
                    $title = '';
                    $txt = trans('interface.access');
                } else {
                    $color = "#f44336";
                    if (admin() || guest())
                        $btn = 'btn-danger';
                    else
                        $btn = 'btn-default disabled';
                    $status = 'Indisponível';
                    $title = 'Este experimento está indisponível no momento';
                    $txt = trans('interface.test');
                }
                ?>
                <div class="row">
                    <div class='col-lg-5 col-md-5 col-sm-2'>
                        <img src="<?php echo e(asset($lab->thumbnail)); ?>" class="img-responsive">
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-10">
                        <h5><?php echo e($lab->$name); ?></h5>
                        <p style="font-size:12pt; line-height: 1.3"><?php echo $lab->$desc; ?></p>
                        <a href="<?php echo e(url('/labs/'.$lab->id)); ?>" class="btn btn-sm <?php echo e($btn); ?>" title="<?php echo e($title); ?>" role="button"><?php echo e($txt); ?></a>
                    </div>
                </div>
            </div>
        </div>
        <?php endforeach; ?>
    </div>


    <div class="col-md-6">   
        <h4><?php echo e(trans('docs.title_page')); ?></h4>
        <?php foreach($result['docs'] as $doc): ?>
        <div class="panel panel-default" style="background: #ECF0F1">
            <div class="panel-body">
                <div class="row">
                    <img src="<?php echo e(asset('img/docs/'.formatIcon($doc->format).'.png')); ?>" class="col-md-2 img-responsive" style="margin-top:20px"></td>
                    <div class="col-md-7">
                        <h5><?php echo e($doc->title); ?></h5>
                        <p style="font-size:12pt; line-height: 1.3"><?php echo e(trans('docs.'.$doc->type)); ?><br>
                            <?php echo e(formatSize($doc->size)); ?></p>
                        <a href="<?php echo e(asset($doc->url)); ?>" class="btn btn-sm btn-primary" role="button"><?php echo e(trans('interface.access')); ?></a>
                    </div>
                </div>
            </div>
        </div>
        <?php endforeach; ?>
    </div>
    <?php $__env->stopSection(); ?>

    <?php $__env->startSection('script'); ?>
    <script>
        $(function () {
            $("#all").click(function () {
                $('.lab').show();
                });
            $(".subject").click(function () {
                $('.lab').show();
                var subject = '.' + $(this).attr('id');
                console.log($('.lab').not(subject));
                $('.lab').not(subject).hide("slow");
            });
        });
    </script>
    <?php $__env->stopSection(); ?>



<?php echo $__env->make('layout.default', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>