        </a>
    </div>
    <?php echo Form::close(); ?>

    
</div>
</center>

<div class="row" style="padding-bottom:75px">
    <?php foreach($labs as $lab): ?>

    <?php
    if (status($lab->id)) {
        $color = "#51bf87";
        $btn = 'btn-fresh';
        $status = 'Disponível';
        $title = '';
        $txt = trans('interface.access');
    } else {
        $color = "#f44336";
        $btn = 'btn-default disabled';
        $status = 'Indisponível';
        $title = 'Este experimento está indisponível no momento';
        $txt = trans('interface.unavailable');
    }
    ?>


    <div class="col-md-4">
        <div class="card">
            <div class="card-image">
                <img src="<?php echo e(asset($lab->thumbnail)); ?>">
                <span class="card-title"><a href="<?php echo e(url('/labs/'.$lab->id)); ?>" class="btn <?php echo e($btn); ?>" title="<?php echo e($title); ?>" role="button"><?php echo e($txt); ?></a></span>
            </div>
            <div class="card-content">
                <span class="status" id='<?php echo e($lab->id); ?>' style="color:<?php echo e($color); ?>;" class="tooltip" title="<?php echo e($status); ?>"><i class="fa fa-circle"></i></span>
                <b><?php echo e($lab->$name); ?></b>
                <p><?php echo e($lab->$desc); ?></p>
            </div>

        </div>
    </div>
    <?php endforeach; ?>
</div>
